<launch>

   <!-- Launch the laser -->
<arg name="name" default="laser"/>
<arg name="host" default="192.168.1.35"/>
<arg name="frame_id" default="odom"/>

<node pkg="lms1xx" name="lms1xx_$(arg name)" exec = "LMS1xx_node" output="screen">
   <param name="host" exec="string" value="$(arg host)"/>
   <!--param name="frame_id" exec="string" value="$(arg frame_id)"/-->
   <param name="frame_id" exec="string" value="base_laser"/>
</node>

<node pkg="laser_filters" exec="scan_to_scan_filter_chain" name="laser_filter">
   <rosparam command="load" file="$(find robile_navigation_demo)/ros/config/laser_sick_config.yaml" />
</node>


<!-- Launch the wheel driver -->
<include file="$(find smart_wheel_driver)/launch/narko.launch"/>
<node pkg="joy" exec="joy_node" name="joy" output="screen" />
<node pkg="tf" exec="static_transform_publisher" name="laser_link" args="0.45 0 0.22 0 0 0 /base_link /base_laser 30" />

<!--<include file="$(find kelo_tulip)/launch/example_joypad.launch"/> -->

</launch>